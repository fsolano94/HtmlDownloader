<Window x:Class="HtmlDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlDownloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="UrlTextBox" HorizontalAlignment="Left" Height="23" Margin="181,15,0,0" TextWrapping="Wrap" Text="enter url here" VerticalAlignment="Top" Width="409"/>
        <TextBlock Name="HtmlTextBlock" HorizontalAlignment="Left" Margin="181,67,0,0" TextWrapping="Wrap" Text="Html" VerticalAlignment="Top" Height="279" Width="409"/>
        <Button Content="Get Html" Name="GetHtmlButton" HorizontalAlignment="Left" Margin="626,16,0,0" VerticalAlignment="Top" Width="75" Click="OnGetHtmlButton"/>
        <Button Content="Save" Name="SaveButton" HorizontalAlignment="Left" Margin="626,300,0,0" VerticalAlignment="Top" Width="75" Click="OnSaveButton"/>
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" Height="19" Margin="181,363,0,0" VerticalAlignment="Top" Width="409"/>

    </Grid>
</Window>
